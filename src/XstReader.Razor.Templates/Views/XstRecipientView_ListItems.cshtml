@using XstReader
@using XstReader.App.Common
@using XstReader.Razor.Templates

@model IEnumerable<XstRecipient>

@{
    IEnumerable<XstRecipient> RecipientList = Model;
    XstExportOptions Options = RenderOptions.ExportOptions;

    int Count = RecipientList?.Count()??0;
}

@* Recipient List *@
@{
    if (RecipientList!=null && Count>0)
    {
        @Html.Raw(ViewData["Start"]);
        for(int i=0; i < Count; i++)
        {
            Html.RenderPartial("XstRecipientView_InListItem", RecipientList.ElementAt(i));
            if (i < Count - 1)
                @Html.Raw(", ");
        }
        @Html.Raw(ViewData["End"]);
    }
}