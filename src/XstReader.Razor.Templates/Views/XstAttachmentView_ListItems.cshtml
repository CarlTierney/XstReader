@using XstReader
@using XstReader.App.Common
@using XstReader.Razor.Templates

@model IEnumerable<XstAttachment>

@{
    IEnumerable<XstAttachment> AttachmentList = Model;
    XstExportOptions Options = RenderOptions.ExportOptions;

    int Count = AttachmentList?.Count()??0;
}

@* Attachment List *@
@{
    if (AttachmentList!=null && Count>0)
    {
        @Html.Raw(ViewData["Start"]);
        for(int i=0; i < Count; i++)
        {
            Html.RenderPartial("XstAttachmentView_InListItem", AttachmentList.ElementAt(i));
            if (i < Count - 1)
                @Html.Raw(", ");    
        }
        @Html.Raw(ViewData["End"]);
    }
}